---
const { id, label, class: className } = Astro.props;
import Modal from "./Modal.astro";
---

<li class={`flex flex-col ${className}`}>
  <input type="radio" name="modal" id={id} class="hidden modal-toggle" />
  <label
    for={id}
    class="cursor-pointer text-center py-3 px-4 lg:px-6 flex grow justify-center"
    >{label}</label
  >
  <Modal id={id} />
</li>
